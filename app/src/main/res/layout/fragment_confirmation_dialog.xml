<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cpTransparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ConfirmationDialog">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/avBooked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/booked2" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvDialog"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="32dp"
        android:padding="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnClose"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_close"
            android:layout_gravity="end"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:textSize="18sp"
            android:text="Confirmation"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_gravity="fill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/physician"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:text="Book an appointment on "
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/black"/>


        </LinearLayout>


            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/date_selected"
                    android:elevation="0dp"
                    android:paddingTop="4dp"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:paddingTop="4dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:text="Mon"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/open_sans" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            android:text="01"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/open_sans_semibold" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvChangeDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center"
                    android:text="Change Date"
                    android:fontFamily="@font/open_sans"
                    android:textColor="#1AA0A4"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Doctor Name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="Category"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:paddingVertical="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text=":"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text=":"/>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tvDialogName"
                        android:layout_marginStart="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#5F5F5F"
                        android:fontFamily="@font/open_sans"
                        android:text="Dr. Tabrez"/>

                    <TextView
                        android:id="@+id/tvDialogCategory"
                        android:layout_marginStart="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#5F5F5F"
                        android:fontFamily="@font/open_sans"
                        android:text="Dermatologist"/>


                </LinearLayout>

            </LinearLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:paddingHorizontal="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="8dp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/ai_btn_bg"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

